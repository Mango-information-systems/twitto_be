<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

<header>
    <% include ../partials/header %>
</header>

<section class="stats">
    <div class="container-fluid">
        <div class="row">
            <div class="one-third column">
                <div class="row">
                    <div class="two-thirds column">
                        Chart
                    </div>
                    <div class="one-third column" id="stats">
                        <div class="progress-bar total-tweets">
                            <div class="u-pull-left" data-value="100">Total</div>
                            <div class="u-pull-right label" style="text-align: right">-</div>
                            <progress style="width: 100%" max="100" value="0" class="html5">
                                <div class="progress-bar">
                                    <span style="width: 100%">100%</span>
                                </div>
                            </progress>
                        </div>
                        <div class="progress-bar original-tweets">
                            <div class="u-pull-left" data-value="80">Original</div>
                            <div class="u-pull-right label" style="text-align: right">-</div>
                            <progress style="width: 100%" max="100" value="0" class="html5">
                                <div class="progress-bar">
                                    <span style="width: 80%">80%</span>
                                </div>
                            </progress>
                        </div>
                        <div class="progress-bar">
                            <div class="u-pull-left" data-value="30">Retweets</div>
                            <div class="u-pull-right retweets" style="text-align: right">-</div>
                            <progress style="width: 100%" max="100" value="0" class="html5">
                                <div class="progress-bar">
                                    <span style="width: 30%">30%</span>
                                </div>
                            </progress>
                        </div>
                        <div class="progress-bar">
                            <div class="u-pull-left" data-value="20">Replies</div>
                            <div class="u-pull-right" style="text-align: right">-</div>
                            <progress style="width: 100%" max="100" value="0" class="html5">
                                <div class="progress-bar">
                                    <span style="width: 20%">20%</span>
                                </div>
                            </progress>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="one-half column">
                        Hashtags
                    </div>
                    <div class="one-half column">
                        Mentions
                    </div>
                </div>

            </div>
            <div class="two-thirds column">
                <%- svg %>
            </div>
        </div>
    </div>
</section>

<footer>
    <% include ../partials/footer %>
</footer>


<script>

    var tweetsCache = <%- JSON.stringify(tweets) %>
</script>
<script src="./js/app.js"></script>
</body>
</html>
