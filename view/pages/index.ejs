<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>


<section>
    <div class="container-fluid">
		<header>
			<% include ../partials/header %>
		</header>
        <div class="row">
            <div class="one-half column">
				<div class="card">
					<div class="row">
						<div class="twelve columns">
							<h2>Tweets in the last 24 hours</h2>
							<div class="loading" id="tweetStatsWrap">
								<svg id="tweetStats" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" preserveAspectRatio="xMinYMin" viewBox="0 0 500 300">
									<text x="150" y="50%" style="text-anchor:middle">
										<tspan id="totalCount" class="metric" x="150"></tspan>
										<tspan x="150" dy="2em">tweets</tspan>
									</text>
									<rect x="340" y="20" width="24" height="24" style="fill:#008000;"></rect>
									<text x="380" y="20" dy=".9em">
										<tspan id="replyCount"></tspan>
										<tspan>replies</tspan>

									</text>
								</svg>
							</div>
						</div>
					</div>
                </div>
				<div class="card">
					<div class="row">
						<div class="one-half column">
							<h2>Top hashtags</h2>
							<small>coming soon</small>
						</div>
						<div class="one-half column">
							<h2>Top mentions</h2>
							<small>coming soon</small>
						</div>
					</div>
                </div>
				<% include ../partials/about %>
            </div>
            <div class="one-half column">
				<div class="card">
					<div class="row">
						<h2>Tweets in the last 30 minutes</h2>
						<div class="loading" id="timelineWrap">
							<div class="lg-eight md-twelve column">
								<p>
									per minute
									<svg id="tweetsPerMinute" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" preserveAspectRatio="xMinYMin" viewBox="0 0 600 300" />
								</p>
							</div>
							<div class="lg-four md-twelve column">
								<p>
									per second
									<svg id="tweetsPerSecond" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" preserveAspectRatio="xMinYMin" viewBox="0 0 300 300" />
								</p>
							</div>
						</div>
					</div>
                </div>
				<div class="card">
					<h2>Geolocation</h2>
					<div class="loading" id="mapWrap">
						<svg id="map" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" preserveAspectRatio="xMinYMin" viewBox="0 0 960 700">
							<% include ../partials/belgianMapPath %>
						</svg>
					</div>
				</div>
            </div>
        </div>
    </div>
</section>

<script src="./js/app.js"></script>
</body>
</html>
